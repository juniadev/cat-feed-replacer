{
    "name": "Cat Feed Replacer",
    "version": "1.0",
    "description": "When accessing Facebook, replaces all images for cats and all posts for MEOWs!",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://www.facebook.com/*"],
        "run_at": "document_start"
    }],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
  }